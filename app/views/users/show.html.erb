<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<% if @user.image.attached? %>
<!-- @user.image.present? will always return true, use attached? to check presence -->
  <p>
    <strong>Image:</strong>
    <br>
    <%= image_tag @user.image %>
  </p>
<% end %>



<% if @user.attachments.attached? %>
<p>
  <strong>Images:</strong>
  <br>
  <% @user.attachments.each do |attachment| %>
    <%= image_tag(attachment) %>
  <% end %>
</p>
<% end %>


<!-- attachments -->

<%= link_to 'Edit', edit_user_path(@user) %> |
