		<h3 class="page-title">
			<%= t("qingting")%> <small><%= t('qingting_info')%></small>
		</h3>
		<ul class="page-breadcrumb breadcrumb">
			<li>
				<i class="fa fa-home"></i>
				<a href="/"><%= t('dashboard') %></a>
