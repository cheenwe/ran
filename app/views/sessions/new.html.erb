<div class="block-center mt-xl wd-xl">

	<div class="panel panel-dark panel-flat">
		<div class="panel-heading text-center">
			<a href="#">
				<img src="<%= image_path('logo.png') %>" alt="Image" class="block-center green" />
			</a>
		</div>
		<div class="panel-body">
			<p class="text-center pv"><%= I18n.t :"session.welcome_login" %></p>

			<%= simple_form_for @user,  url: sessions_path  do |f| %>
				<div class="input-group form-group">
					<span class="input-group-addon"><i class="fa fa-user"></i></span>
					<%= f.text_field :name, label: false,placeholder: I18n.t(:"session.name_placeholder"),required:"required", class: "form-control" %>
				</div>
				<div class="input-group form-group">
					<span class="input-group-addon"><i class="fa fa-lock"></i></span>
					<%= f.password_field :password, label: false,placeholder: I18n.t(:"session.password_placeholder"),required:"required", autocomplete:"off", class: "form-control" %>
				</div>

				<div class="clearfix">
					<div class="checkbox c-checkbox pull-left mt0">
						<label>
							<%= f.check_box :remember, class: "form-control" %>
							<span class="fa fa-check"></span><%= I18n.t :"session.remember" %>
						</label>
					</div>
					<div class="pull-right">
					<a href="<%= new_password_reset_path(locale: I18n.locale)%>" class="text-muted"><%= I18n.t :"session.forgot_password" %> </a>
					</div>
				</div>

				<%= f.submit I18n.t(:"session.submit_login"), class: "btn btn-primary btn-block" %>
			<% end %>

			<p class="pt-lg text-center"><%= I18n.t :"session.register_content" %></p>
			<a href="<%= register_url(locale: I18n.locale)%>" class="btn btn-block btn-default"><%= I18n.t :"session.register" %></a>

		</div>
	</div>

	<div class="p-lg text-center">
		<span>&copy;</span>
		<span>2015</span>
		<span>-</span>
		<span>
			<a href="http://cheenwe.cn" target="_blank">Ran</a>
		</span>
	</div>
</div>
