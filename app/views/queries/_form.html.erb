<%= simple_form_for(@query) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :filters %>
    <%= f.association :user %>
    <%= f.input :type %>
    <%= f.input :open %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
