<div id="login" class="form">
  <%= content_tag(:div, flash[:error], class: "error-box") if flash[:error] %>
  <%= content_tag(:div, flash[:notice], class: "error-box") if flash[:notice] %>
  <%= content_tag(:div, flash[:alert], class: "error-box") if flash[:alert] %>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="input-group form-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.input :login, label: false, input_html: {placeholder: "邮箱", class: "form-control" } %>
      </div>
      <div class="input-group form-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= f.input :password, label: false, input_html: {placeholder: "密码", class: "form-control" } %>
      </div>
      <%= f.submit "登陆", class: "btn btn-primary btn-block" %>
  <%# end %>
</div>
